<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.kosta.yolo.dao.TripInfoMapper">
    
    	<select id="selectInfoAll" resultType="com.kosta.yolo.vo.TripInfoVO">
    		SELECT * FROM TripInfo
    	</select>
    	
    	<!-- 연령별 메인 인기 top5 -->
   		<select id="ageAll" resultType="com.kosta.yolo.vo.TripInfoVO">
    		SELECT * FROM TripInfo ORDER BY trip_like DESC LIMIT 5
    	</select> 
    	
    	<!-- 연령별 -->
    	<select id="selectListAge"  parameterType="String"  resultType="com.kosta.yolo.vo.TripInfoVO">
	    	<bind name="age_id" value="'%' + _parameter + '%'" />
	    		SELECT * FROM TripInfo WHERE
	    			age_id LIKE #{age_id} ORDER BY trip_like DESC LIMIT 5
    	</select>
    	
    	<!-- 테마별 -->
    	<select id="themeAll"  resultType="com.kosta.yolo.vo.TripInfoVO">
	    		SELECT * FROM TripInfo ORDER BY trip_like DESC LIMIT 5
    	</select>
    </mapper>