<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="com.kosta.yolo.dao.TripSearchMapper">
    
    	<select id="selectInfoAll" resultType="com.kosta.yolo.vo.TripInfoVO">
    		SELECT * FROM TripInfo WHERE 
    		age_id LIKE concat('%',#{age_id},'%')
    		
    		<if test='trip_add1 != null or trip_add1 !=""'>
    		OR trip_add1 LIKE concat('%',#{trip_add1},'%') 
    		</if>
    		<if test='trip_nickname != null or trip_nickname !=""'>
    		OR trip_nickname LIKE concat('%',#{trip_nickname},'%')
    		</if>
    	</select>
    </mapper>